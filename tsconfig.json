{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "jsx": "react",
        "lib": [
            "es2015",
            "dom"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*.d.ts"
            ]
        }
    },
    "include": [
        "src/**/*.tsx"
    ],
    "exclude": [
        // "src/**/*.test.ts",
        "src/**/*.test.tsx",
        // "src/**/test/*.ts"
    ]
}