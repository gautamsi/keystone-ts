{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "declaration": true,
        "allowUnreachableCode": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "jsx": "react",
        "lib": [
            "es2015",
            "dom"
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*"
    ]
}